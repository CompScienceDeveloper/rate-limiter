# Environment Configuration (for distributed systems)
# Each service reads its own environment variables independently
# Options: test, development (dev), production (prod)
# test: 20 requests/minute | dev: 10 requests/second | prod: 100 requests/second
ENVIRONMENT=test

# Rate Limiting Configuration
# Option 1: Use preset environments (ENVIRONMENT variable above)
# Option 2: Set explicit values (overrides ENVIRONMENT presets)
# RATE_LIMIT_RATE=100.0
# RATE_LIMIT_CAPACITY=100

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_URLS=redis://localhost:6379,redis://localhost:6380
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# System Performance
TARGET_LATENCY_MS=10
MAX_RPS=1000000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# API Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Microservice URLs
SERVICE_A_URL=http://localhost:8001
SERVICE_B_URL=http://localhost:8002
SERVICE_C_URL=http://localhost:8003

# Logging
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
REDIS_PING_TIMEOUT=5

# Behavior
# Fail Closed: Deny requests if Redis fails (security over availability)
FAIL_CLOSED=true

# Security
ENABLE_CORS=true
CORS_ORIGINS=*

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090