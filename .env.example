# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_URLS=redis://localhost:6379,redis://localhost:6380
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Rate Limiting Configuration
DEFAULT_RATE_LIMIT=100
DEFAULT_BUCKET_CAPACITY=100
BURST_ALLOWANCE=1.5

# System Performance
TARGET_LATENCY_MS=10
MAX_RPS=1000000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# API Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Microservice URLs
SERVICE_A_URL=http://localhost:8001
SERVICE_B_URL=http://localhost:8002
SERVICE_C_URL=http://localhost:8003

# Logging
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
REDIS_PING_TIMEOUT=5

# Behavior
AVAILABILITY_OVER_CONSISTENCY=true
FALLBACK_ON_REDIS_ERROR=true

# Security
ENABLE_CORS=true
CORS_ORIGINS=*

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090